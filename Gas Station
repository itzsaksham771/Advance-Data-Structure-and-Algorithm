class Solution {
    public int startStation(int[] gas, int[] cost) {
        // Your code here
        int totalTank = 0;
        int currTank = 0;
        int startingStation = 0;

        for (int i = 0; i < gas.length; i++) {
            int netGas = gas[i] - cost[i];
            totalTank += netGas;
            currTank += netGas;

            if (currTank < 0) {
                startingStation = i + 1;
                currTank = 0;
            }
        }

        if (totalTank < 0) {
            return -1;
        }

        return startingStation;
    }
}
